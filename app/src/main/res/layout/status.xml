<?xml version="1.0" encoding="utf-8"?>
<!-- Main Layout of Status Activity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b4f3ff">
    <!-- Title TextView-->
    <TextView android:layout_width="362dp"
        android:layout_height="wrap_content" android:gravity="center"
        android:textSize="30sp"
        android:layout_margin="10dp" android:text="@string/titleStatus"
        android:background="#1e1bff"
        android:id="@+id/textView1"
        android:textColor="#fff9e8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonTodos"
        android:textSize="20sp"
        android:id="@+id/button"
        android:background="#3330ff"
        android:textColor="#fbfff6"
        android:layout_gravity="right"
        android:onClick="onClickTodos" />

    <!-- Status EditText -->

    <ListView
        android:id="@+id/peopleLv"
        android:layout_width="fill_parent"
        android:layout_height="249dp"
        android:cacheColorHint="#00000000"
        android:dividerHeight="2dp"
        android:layout_weight="1"
        android:layout_margin="10dp"></ListView>

    <EditText android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintText" android:id="@+id/editText"
        android:gravity="top|center_horizontal"></EditText>
    <!-- Update Button -->

    <Button android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:text="@string/buttonUpdate"
        android:textSize="20sp" android:id="@+id/buttonUpdate"
        android:background="#3330ff"
        android:textColor="#fbfff6"></Button>
</LinearLayout>